<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuizFinishedActivity">

    <TextView
        android:id="@+id/quiz_finished_points_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_size_xl_large"/>
    <TextView
        android:id="@+id/quiz_finished_points_gained"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/quiz_finished_points_max"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="@dimen/text_size_xl_large"/>

</android.support.constraint.ConstraintLayout>